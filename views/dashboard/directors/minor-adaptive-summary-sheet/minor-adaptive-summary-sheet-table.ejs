<%- include('../../../partials/header'); -%>

<%- include('../../../partials/sidebar'); -%>


<div class="main-panel">
  <!-- Navbar area -->
  <%- include('../../../partials/navbar'); -%>

  <div class="content">

    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title "><%= title %> Forms</h4>
              <p class="card-category">Lists all forms</p>
              <a href="/dashboard/directors/minor-adaptive-summary?new=true" type="button" id="add-btn" class="btn btn-light pull-right btn-sm">Add New Form</a>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table data-table">
                  <thead class="text-primary">
                    <th class="text-bold">
                      Director Name
                    </th>
                    <th class="text-bold">
                      Service Month and Year
                    </th>
                    <th class="text-bold">
                      Component Code
                    </th>
                    <th class="text-bold">
                      Contract Number
                    </th>
                    <th class="text-bold">
                      Contact Person
                    </th>
                    <th class="text-bold">
                      Area Code - Telephone Num
                    </th>
                    <th class="text-bold">
                      Number of Records
                    </th>
                    <th class="text-bold">
                      Actions
                    </th>
                  </thead>
                  <tbody>
                    <% for(form of forms){ %>
                      <tr>
                        <td>
                          <%= form.director.firstName + ' ' + form.director.lastName %>
                        </td>
                        <td>
                          <%= form.serviceMonth + ', ' + form.serviceYear %>
                        </td>
                        <td>
                          <%= form.componentCode %>
                        </td>
                        <td>
                          <%= form.contractNumber %>
                        </td>
                        <td>
                          <%= form.contactPerson %>
                        </td>
                        <td>
                          <%= form.areaCode + '-' + form.telephoneNumber %>
                        </td>
                        <td>
                          <%= form.sections.length %>
                        </td>
                        <td>
                          <a href="/dashboard/directors/minor-adaptive-summary-forms/<%= form._id %>" rel="tooltip" data-original-title="View Form"  class="btn btn-link btn-info btn-just-icon"><i class="material-icons">description</i></a>
                          <a href="#" rel="tooltip" class="btn btn-link btn-danger btn-just-icon remove"><i class="material-icons">close</i></a>
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
    
      </div>
    
    </div>
  
  
  </div>



  <!-- Bottom footer -->
  <%- include('../../../partials/bottombar'); -%>
</div>

<!-- page footer -->
<%- include('../../../partials/footer'); -%>